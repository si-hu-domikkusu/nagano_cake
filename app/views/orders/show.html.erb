<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-2 my-5 title" >
      <h4>注文履歴詳細</h4>
    </div>
  </div>

  <div class = "row">
    <div class = "col-6">注文情報</div>
    <div class = "col-6">請求情報</div>
  </div>

  <div class = "row">
      <div class="col-6">
        <table class = "table">
          <tbody>
            <tr><th class="table-secondary">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d/ %H:%M:%S') %></td></tr>
            <tr><th class="table-secondary">配送先</th><td><%= @order.address %> 　　<br>
                                                           <%= @order.postal_code %> <br>
                                                           <%= @order.name %>　　　　</td></tr>
            <tr><th class="table-secondary">支払方法</th><td><%= @order.payment_method %></td></tr>
            <tr><th class="table-secondary">ステータス</th><td><%= @order.order_status %></td></tr>
          </tbody>
        </table>
      </div>
      <div class="col-4">
        <table class = "table">
          <tbody>
            <tr><th class="table-secondary">商品合計</th><td><%= (@order.total_payment.to_i - 800).to_s(:delimited) %>円</td></tr>
            <tr><th class="table-secondary">配送料</th><td>800円</td></tr>
            <tr><th class="table-secondary">請求額</th><td><%= @order.total_payment.to_s(:delimited) %>円</td></tr>
          </tbody>
        </table>
      </div>
  </div>

  <div class = "row">
    <div class = "col">注文内容</div>
  </div>
  <div class = "row">
    <div class = "col-8" >
      <table class = "table">
        <thead class="table-secondary">
          <tr>
            <th>商品</th>
            <th>単価</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>