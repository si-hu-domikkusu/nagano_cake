<div class = "container px-9 px-sm-0">
  <div class = "row">
      <div class = "col-3 my-5 title" >
      <h4>注文履歴一覧</h4>
      </div>
      <div class="col-md-2 ml-auto">
      </div>
      <table class = "table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d')%></td>

              <td class="align-middle"><%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>

              <td class="align-middle"><% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %> <br>
                  <% end %></td>

              <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>

              <td class="align-middle"><%= order.order_status %> </td>

              <td class="align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>