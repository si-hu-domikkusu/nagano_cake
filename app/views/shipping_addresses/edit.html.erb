<div class = "container">
  <div class = "row">
    <div class = "col-3 my-5 title" >
      <h4>配送先編集</h4>
    </div>
  </div>

<%= form_with model: @shipping_address, url: shipping_address_path, local:true do |f| %>

<table>
  <tr>
    <td><%= f.label :郵便番号（ハイフンなし） %></td>
    <td><%= f.text_field :postal_code %></td>
  </tr>

  <tr>
    <td><%= f.label :住所 %></td>
    <td><%= f.text_field :address ,:size => "50*50" %></td>
  </tr>
  <tr>
    <td><%= f.label :宛名 %></td>
    <td><%= f.text_field :name %></td>
    <td>&emsp;<%= f.submit "変更内容を保存" ,class:"btn btn-success" %></td>
  </tr>
</table>
<% end %>
