<div class = "container">
  <div class = "row">
    <div class = "col-3 my-5 title" >
      <h4>配送先登録/一覧</h4>
    </div>
  </div>

<%= form_with model: @shipping_address, url: shipping_addresses_path, local:true do |f| %>

<table>
  <tr>
    <td><%= f.label :郵便番号（ハイフンなし） %></td>
    <td><%= f.text_field :postal_code %></td>
  </tr>

  <tr>
    <td><%= f.label :住所 %></td>
    <td><%= f.text_field :address ,:size => "50*50" %></td>
  </tr>
  <tr>
    <td><%= f.label :宛名 %></td>
    <td><%= f.text_field :name %></td>
    <td>&emsp;<%= f.submit "新規登録" ,class:"btn btn-success" %></td>
  </tr>
</table>
<% end %>

<table class="table table-bordered">
  <tbody>
    <tr>
      <td class="table-secondary">郵便番号</td>
      <td class="table-secondary">住所</td>
      <td class="table-secondary">宛名</td>
      <td class="table-secondary"></td>
    </tr><br>

    <% @shipping_addresses.each do |shipping_address| %>

    <tr>
      <td><%= shipping_address.postal_code %></td>
      <td><%= shipping_address.address %></td>
      <td><%= shipping_address.name %></td>
      <td>
        <%= link_to "編集する", edit_shipping_address_path(shipping_address.id), class: "btn btn-primary" %>&emsp;
        <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>

