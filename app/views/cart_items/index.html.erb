<h1>CartItems#index</h1>
<p>Find me in app/views/cart_items/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
   </tr>
  </thead>
  <tbody>
     <% @cart_items.each do |cart_item| %>
    <tr>
      <th><%= attachment_image_tag cart_item.item, :image, size: "30x20" %><%= cart_item.item.name %></th>
      <th><%= (cart_item.item.price.to_i * 1.1).floor %></th>
      <th><%= cart_item.amount %></th>
      <th><%= (cart_item.item.price.to_i * 1.1).floor * cart_item.amount.to_i %></th>
      <th><%= link_to '削除', cart_item_path(cart_item.id), class: 'btn-sm btn-danger', method: :delete %></th>
      </tr>
    <% end %>
  </tbody>
  <%= link_to '全削除', cart_items_destroy_all_path, class: 'btn-sm btn-danger', method: :delete %>
</table>