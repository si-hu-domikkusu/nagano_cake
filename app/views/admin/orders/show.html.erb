<div class = "container">
      <div class = "col-3 my-5 title" >
        <h4>注文履歴詳細</h4>
      </div>

      <table class="table table-borderless">
  <tr>
    <th>購入者</th>
    <td><%= link_to admin_customer_path(@order.customer) do %>
        <%= @order.customer.last_name %> <%= @order.customer.first_name %>
        <% end %></td>
    <td><td>
  </tr>

  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d/ %H:%M:%S') %></td>
    <td><td>
  </tr>

  <tr>
    <th>配送先</th>
    <td>〒 <%= @order.customer.postal_code %> <%= @order.customer.address %></td>
    <td><td>
  </tr>

  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
    <td><td>
  </tr>

  <tr>
    <th>注文ステータス</th>
    <td>
      <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
      <%= f.collection_select(:order_status, Order.all, :id, :order_status) %>
      <%= f.submit "更新", class: "btn btn-success" %>
      <% end %>
    </td>
  </tr>
      </table>
      
      
      <table class = "table" >
        <thead>
          <tr>
            <th class="table-secondary">商品名</th>
            <th class="table-secondary">単価（税込）</th>
            <th class="table-secondary">数量</th>
            <th class="table-secondary">小計</th>
            <th class="table-secondary">制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <%# sum = 0 %>
          <%# @order_details.each do |cart_item| %>
            <tr>
              <td></td>
              <td>¥<%#= (cart_item.item.price.to_i * 1.1).floor.to_s(:delimited) %></td>
              <td>
                  <%#= cart_item.amount  %>
              </td>
              <td>¥<%#= ((cart_item.item.price.to_i * 1.1).floor * cart_item.amount.to_i).to_s(:delimited) %></td>
              <td></td>
            </tr>
            <%# sum += (cart_item.item.price.to_i * 1.1).floor * cart_item.amount.to_i %>
          <%# end %>
        </tbody>

      </table>
      
</div>
