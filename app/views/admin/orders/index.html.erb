<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-8 offset-md-1">
      <div class = "col-3 my-5 title" >
      <h4>注文履歴一覧</h4>
      </div>
      <table class = "table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <th><%= link_to admin_order_path(order) do %>
                  <%= order.created_at.strftime('%Y/%m/%d/ %H:%M:%S') %>
                <% end %>
              </th>
              <th>
                <%= order.customer.last_name %><%= order.customer.first_name %>
              </th>
              <th><%#= order.order_details.amount %></th>
              <th>
                <% order.order_status %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @orders %>
    </div>
  </div>
</div>