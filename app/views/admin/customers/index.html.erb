<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-8 offset-md-1">
      <div class = "col-3 my-5 title" >
      <h4>会員一覧</h4>
      </div>
      <table class = "table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <th><%= customer.id %></th>
              <th>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </th>
              <th><%= customer.email %></th>
              <th>
                <% unless customer.is_deleted %>
                  <p class="text-success">有効</p>
                <% else %>
                  <p class="text-muted">退会</p>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @customers %>
    </div>
  </div>
</div>