<div class = "container">

      <div class = "col-4 my-5 title" >
        <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
      </div>

      <table class="table table-borderless">
        <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
        <tr><th>氏名</th><td><%= @customer.last_name %>&emsp;<%= @customer.first_name %></td></tr>
        <tr><th>フリガナ</th><td><%= @customer.kana_last_name %>&emsp;<%= @customer.kana_first_name %></td></tr>
        <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
        <tr><th>住所</th><td><%= @customer.address %></td></tr>
        <tr><th>電話番号</th><td><%= @customer.phone_number %></td></tr>
        <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
        <tr><th>会員ステータス</th><td>
           <% unless @customer.is_deleted %>
              <p class="text-success">有効</p>
           <% else %>
              <p class="text-muted">退会</p>
           <% end %>
           </td>
         </tr>
         <tr>
          <td></td>
          <td>
          <%= link_to "編集する",  edit_admin_customer_path(@customer.id), class: "btn btn-success"  %>&emsp;
          <%= link_to "注文履歴一覧をみる", admin_orders_path, class: "btn btn-primary" %>
          </td>
        </tr>

       </table>

</div>