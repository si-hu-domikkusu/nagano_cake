<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
<table>

  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
    <td></td>
  </tr>

  <div class="field_form_grou">
    <tr>
      <th><%= f.label :名前 %></th>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
      <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
    </tr>
  </div>

  <div class="field_form_group">
    <tr>
      <th><%= f.label :フリガナ %></th>
      <td><%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %></td>
      <td><%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %></td>
    </tr>
  </div>

　<div class="field_form_group">
　  <tr>
      <th><%= f.label :郵便番号（ーなし） %></th>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
      <td></td>
    </tr>
  </div>

  <div class="field_form_group">
    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
      <td></td>
    </tr>
  </div>

  <div class="field_form_group">
    <tr>
      <th><%= f.label :電話番号（ーなし） %></th>
      <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
      <td></td>
    </tr>
  </div>

  <div class="field_form_group">
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      <td></td>
    </tr>
  </div>

    <tr>
      <th>退会ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, :ture %>
        <%= f.label :is_deleted, "退会", {value: :ture, style: "display: inline-block;"} %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
      </td>
      <td></td>
    </tr>

</table>

  <div class="actions">
    <%= f.submit "変更を保存" ,class:"btn btn-success" %>
  </div>

<% end %>