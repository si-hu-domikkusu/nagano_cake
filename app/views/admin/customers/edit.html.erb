<div class = "container">

<div class = "col-5 my-5 title" >
  <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
</div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>

<table class="table table-borderless">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
    <tr>
      <th><%= f.label :氏名 %></th>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>&emsp;
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
    </tr>
    <tr>
      <th><%= f.label :フリガナ %></th>
      <td><%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>&emsp;
          <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %></td>
    </tr>
　  <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
    </tr>
    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address" ,:size => "70*70" %></td>
    </tr>
    <tr>
      <th><%= f.label :電話番号 %></th>
      <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
    </tr>
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th>退会ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
        <%= f.radio_button :is_deleted, :ture %>
        <%= f.label :is_deleted, "退会", {value: :ture, style: "display: inline-block;"} %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
      <div class="actions">
        <%= f.submit "変更を保存" ,class:"btn btn-success" %>
      </div>
      </td>
    </tr>
</table>

<% end %>

</div>
