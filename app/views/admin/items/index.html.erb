<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-8 offset-md-1">
      <div class = "col-3 my-5 title" >
      <h4>商品一覧</h4>
      </div>
      <div class="col-md-2 ml-auto">
        <span style="font-size:30px; ">
        <%= link_to "" ,new_admin_item_path ,class: "fas fa-plus-circle" %>
        </span>
      </div>
      <table class = "table">
        <thead class="table-secondary">
          <tr>
            <th >商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <th><%= item.id %></th>
              <th>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </th>
              <th><%= item.price %></th>

              <th><%= item.genre.name %></th>

              <th>
                <% unless item.is_active %>
                  販売停止中
                <% else %>
                  販売中
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @items %>
    </div>
  </div>
</div>