
<div class = "container">
  <div class = "row">
    <div class = "col-2 my-5 title" style="">
      <h4>商品詳細</h4>
    </div>
  </div>

  <div class = "row">
    <div class = "col-xs-4" >
      <%= attachment_image_tag @item, :image, size: "300x200" %>
    </div>

    <div class = "col-xs-7 offset-1">
      <table>
        <tr class = ""><th>商品名     </th><td><%= @item.name %></td></tr>
        <tr><th>商品説明     </th><td><%= @item.introduction %></td></tr>
        <tr><th>ジャンル     </th><td><%= @item.genre.name %></td></tr>
        <tr><th>税込価格     </br>
               (税抜価格)     </th><td><%= (@item.price.to_i * 1.1).floor %>(<%= @item.price %>)円</td></tr>
        <tr><th>販売ステータス     </th><td><% if @item.is_active == true %>
                                              販売中
                                            <% elsif @item.is_active == false %>
                                              販売停止中
                                            <% end %>
        </td></tr>
      </table>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center" style="height:125px;">
    <div class = "row">
      <%= link_to "編集する" ,edit_admin_item_path ,class:"btn btn-success" %>
    </div>
  </div>

</div>