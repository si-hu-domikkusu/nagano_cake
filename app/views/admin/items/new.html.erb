<div class="container">
  <h4>商品新規登録</h4>

  <%= form_with model: @item, url:'/admin/items' ,local:true do |f| %>

      <div class="field_form_group">
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image %>
      </div>

      <div class="field_form_group">
        <%= f.label :商品名 %>
        <%= f.text_field :name %>
      </div>

      <div class="field_form_group">
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction %>
      </div>

      <div class="field_form_group">
        <%= f.label :ジャンル %>
        <%= f.corectionselect :genre_id, [["", "1"], ["", "2"]], include_blank: "-- 選択してください --" %>
        <%#= select_tag 'junre_id' ,options_for_select([['--選択してください--', '0']['ケーキ', '1'], ['お菓子', '2']]) %>
      </div>

      <div class="field_form_group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price %>
      </div>

      <div class="field_form_group">
        <%= f.label :販売ステータス %>
        <%= f.select :is_active, [['販売中', true], ['販売停止', false]] %>
      </div>

      <%= f.submit "新規登録" ,class:"btn btn-success" %>

</div>
 <% end %>


