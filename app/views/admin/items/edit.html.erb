<div class="container">
  <h4>商品編集</h4>

  <%= form_with model: @item, url: admin_item_path(@item.id) ,local:true do |f| %>

      <div class="field_form_group">
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image %>
      </div>

      <div class="field_form_group">
        <%= f.label :商品名 %>
        <%= f.text_field :name %>
      </div>

      <div class="field_form_group">
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction %>
      </div>

      <div class="field_form_group">
        <%= f.label :ジャンル %>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %>
      </div>

      <div class="field_form_group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price %>
      </div>

      <div class="field_form_group">
        <%= f.label :販売ステータス %>
        <%= f.select :is_active, [['販売中', true], ['販売停止', false]] %>
      </div>

      <%= f.submit "変更を保存" ,class:"btn btn-success" %>

</div>
 <% end %>