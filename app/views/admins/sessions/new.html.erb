<div class = "container">

<div class = "col-3 my-5 title" >
<h4>管理者ログイン</h4>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <table>
    <tr>
      <td><%= f.label :メールアドレス %></td>
      <td>&emsp;<%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "30*30" %></td>
    </tr>
    <tr>
      <td><%= f.label :パスワード %></td>
      <td>&emsp;<%= f.password_field :password, autocomplete: "current-password", :size => "30*30" %></td>
    </tr>
    <tr>
      <td></td>
      <td>&emsp;
        <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>

        <% end %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td ><div class="actions mt-3">
        &emsp;<%= f.submit "ログイン",class:"btn btn-primary" %>
      </div>
<% end %>
     </td>
    </tr>
  </table>

</div>